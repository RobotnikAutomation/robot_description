<launch>
  <arg name="robot_id" default="robot"/>
  <arg name="prefix" default="$(arg robot_id)_" />
  <arg name="model" default="rbsherkan_std" />
  <arg name="robot_description_path" default="$(find robot_description)/robots/$(arg model).urdf.xacro" />

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg robot_description_path) prefix:=$(arg prefix)" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" required="true" />
</launch>

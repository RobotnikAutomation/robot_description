<?xml version="1.0"?>
<robot name="caster_wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="rocker_front" params="prefix parent *origin hq reflect">

    <xacro:include filename="$(find robot_description)/urdf/wheels/caster.urdf.xacro" />
    <xacro:include filename="$(find robot_description)/urdf/wheels/rubber_wheel_150.urdf.xacro" />

    <!-- Base link -->
    <joint name="${prefix}rocker_joint" type="revolute">
      <xacro:insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${prefix}rocker_link"/>
      <axis xyz="0 1 0" />
      <limit effort="100" lower="-0.35" upper="0.35" velocity="100" />
      <dynamics damping="0.0" friction="0.95"/>
    </joint>
    <link name="${prefix}rocker_link">
      <visual>
        <xacro:if value="${reflect}">
          <origin xyz="0 0.010422 0" rpy="${M_PI_2} 0 ${M_PI_2}" />
        </xacro:if>
        <xacro:unless value="${reflect}">
          <origin xyz="0 -0.010422 0" rpy="${M_PI_2} 0 ${M_PI_2}" />
        </xacro:unless>
        <geometry>
          <mesh filename="package://robot_description/meshes/rocker/front_v1.stl"/>
        </geometry>
        <material name="darkgrey">
          <color rgba="0.45 0.45 0.45 1"/>
        </material>
      </visual>
      <collision>
        <xacro:if value="${reflect}">
          <origin xyz="0 0.010422 0" rpy="${M_PI_2} 0 ${M_PI_2}" />
        </xacro:if>
        <xacro:unless value="${reflect}">
          <origin xyz="0 -0.010422 0" rpy="${M_PI_2} 0 ${M_PI_2}" />
        </xacro:unless>
        <geometry>
          <mesh filename="package://robot_description/meshes/rocker/front_v1.stl"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="2.0" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.03" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.022" />
      </inertial>
    </link>
    
    <xacro:rubber_wheel prefix="${prefix}wheel_" parent="${prefix}rocker_link" hq="${hq}">
      <xacro:if value="${reflect}">
        <origin xyz="-0.095 0.0579 0.0125" rpy="0 0 0" />
      </xacro:if>
      <xacro:unless value="${reflect}">
        <origin xyz="-0.095 -0.0579 0.0125" rpy="0 0 0" />
      </xacro:unless>
    </xacro:rubber_wheel>

    <xacro:caster prefix="${prefix}caster_" parent="${prefix}rocker_link" hq="${hq}">
      <origin xyz="0.090 0 0.0427" rpy="0 0 0" />
    </xacro:caster>
 </xacro:macro>

</robot>

<?xml version="1.0"?>
<robot name="structure" xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="linak_lc3_lift" params="prefix parent *origin">

	  <link name="${prefix}_linak_lc3_base_link">

		<inertial>
			<mass value="20" />
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="1e-1" ixy="0" ixz="0" iyy="1e-1" iyz="0" izz="1e-1" />
		</inertial>

	    <visual>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <material name="alu_color">
           <color rgba="0.5 0.5 0.5 1"/>
        </material>
	      <geometry>
	        <mesh filename="package://robot_description/meshes/robocomp/Linak_LC3_lift.stl"/>
	      </geometry>
	    </visual>
	    <collision>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <geometry>
	        <mesh filename="package://robot_description/meshes/robocomp/Linak_LC3_lift.stl"/>
	      </geometry>
	    </collision>
	  </link>

	  <joint name="${prefix}_linak_lc3_base_joint" type="fixed">
	    <!-- <axis xyz="0 1 0"/> -->
	    <xacro:insert_block name="origin"/>
	    <parent link="${parent}"/>
	    <child link="${prefix}_linak_lc3_base_link"/>
	  </joint>



	  <link name="${prefix}_linak_lc3_top_link">

		<inertial>
			<mass value="20" />
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia ixx="1e-1" ixy="0" ixz="0" iyy="1e-1" iyz="0" izz="1e-1" />
		</inertial>

	    <visual>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <material name="alu_color">
           <color rgba="0.5 0.5 0.5 1"/>
        </material>
	      <geometry>
	        <mesh filename="package://robot_description/meshes/robocomp/Linak_LC3_lift.stl"/>
	      </geometry>
	    </visual>
	    <collision>
	      <origin rpy="0 0 0" xyz="0 0 0"/>
	      <geometry>
	        <mesh filename="package://robot_description/meshes/robocomp/Linak_LC3_lift.stl"/>
	      </geometry>
	    </collision>
	  </link>

	  <!-- We need to update limits and dynamics to reality -->
      <joint name="${prefix}_linak_lc3_top_joint" type="prismatic">
	    <axis xyz="0 0 1"/>
	    <xacro:insert_block name="origin"/>
	    <!-- <parent link="${prefix}_linak_lc3_base_link"/> -->
		<parent link="${parent}"/>
	    <child link="${prefix}_linak_lc3_top_link"/>
        <limit lower="0" upper="0.9" effort="100.0" velocity="0.5" />
	  </joint>

    <transmission name="${prefix}_linak_lc3_trans" type="SimpleTransmission">

	  <type>transmission_interface/SimpleTransmission</type>

      <actuator name="${prefix}_linak_lc3_top_joint_motor">
          <mechanicalReduction>1</mechanicalReduction>
          <!-- <hardwareInterface>EffortJointInterface</hardwareInterface> -->
      </actuator>

      <joint name="${prefix}_linak_lc3_top_joint">
          <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>

    </transmission>

	  <gazebo reference="${prefix}_linak_lc3_base_link">
	    <material>Gazebo/Gray</material>
	    <!-- <gravity>true</gravity> -->
	  </gazebo>

	  <gazebo reference="${prefix}_linak_lc3_top_link">
	    <material>Gazebo/Gray</material>
	    <!-- <gravity>true</gravity> -->
	  </gazebo>

  </xacro:macro>

</robot>

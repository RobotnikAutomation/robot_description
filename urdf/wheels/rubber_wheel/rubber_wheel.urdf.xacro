<?xml version="1.0"?>
<robot name="wheel" xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
              iyy="${m*r*r/2}" iyz = "0"
              izz="${m*(3*r*r+h*h)/12}" />
  </xacro:macro>

  <xacro:macro name="rubber_wheel" params="prefix parent *origin reflect hq rubber_wheel_radius:=0.11 rubber_wheel_width:=0.15 rubber_wheel_mass:=6.5
                                          mesh_file_left:=robot_description/meshes/wheels/rubber_wheel/rubber_wheel_left
                                          mesh_file_right:=robot_description/meshes/wheels/rubber_wheel/rubber_wheel_right">

<!--WHEEL TIRE -->
    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${prefix}_wheel"/>
      <xacro:insert_block name="origin" />
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <link name="${prefix}_wheel">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
						<xacro:if value="${reflect}">
							<mesh filename="package://${mesh_file_left}.dae" />
						</xacro:if>
						<xacro:unless value="${reflect}">
							<mesh filename="package://${mesh_file_right}.dae" />
						</xacro:unless>
          </geometry>
        </xacro:if>
       <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
          <geometry>
            <cylinder length="${rubber_wheel_width}" radius="${rubber_wheel_radius}" />
          </geometry>
        </xacro:unless>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <xacro:if value="${reflect}">
							<mesh filename="package://${mesh_file_left}.dae" />
						</xacro:if>
						<xacro:unless value="${reflect}">
							<mesh filename="package://${mesh_file_right}.dae" />
          </xacro:unless>
        </geometry>
      </collision>
      <inertial>
        <mass value="${rubber_wheel_mass}" />
        <origin xyz="0 0 0" />
        <xacro:cylinder_inertia  m="${rubber_wheel_mass}" r="${rubber_wheel_radius}" h="${rubber_wheel_width}" />
      </inertial>
    </link>


    <!-- Transmission is important to link the joints and the controller (see summit_xl_control/config/summit_xl_control.yaml)-->
    <transmission name="${prefix}_wheel_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_wheel_joint">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_wheel_joint_motor">
        <mechanicalReduction>1</mechanicalReduction>
        <motorTorqueConstant>20</motorTorqueConstant>
      </actuator>
     </transmission>

  </xacro:macro>

</robot>
